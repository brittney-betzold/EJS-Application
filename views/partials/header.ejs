<header class="text-center">
    <h1 class="display-4">EJS Application</h1>
</header>
<hr />

<% if (user) { %>
    <div class="container mt-4">
        <p class="lead">User <%= user.name %> is logged on.</p>
        <form method="POST" action="/sessions/logoff">
            <button type="submit" class="btn btn-danger">Logoff</button>
        </form>
    </div>
<% } %>

<% if (errors && errors.length) { %>
    <div class="container mt-4">
        <% errors.forEach((err) => { %>
            <p class="alert alert-danger"><%= err %></p>
        <% }) %>
    </div>
<% } %>

<% if (info && info.length) { %>
    <div class="container mt-4">
        <% info.forEach((msg) => { %>
            <p class="alert alert-success"><%= msg %></p>
        <% }) %>
    </div>
<% } %>

<% if ((errors && errors.length) || (info && info.length)) { %>
    <hr />
<% } %>

